<%= image_tag("slogo.jpg")%>
<br>
Supporter

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
    <th>Message</th>
    <th colspan="3" >Action</th>
  </tr>
  <% @supports.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= mail_to post.email %></td>
    <td><%= post.department %></td>
    <td><%= post.message %></td>
    <td><%= button_to "edit", edit_post_path(post), method: :get %></td>
    <td><%= button_to "delete", post, method: :delete, data: {confirm: "Are you sure you want to delete the support request?"} %></td>

  </tr>
  <% end %>
</table>