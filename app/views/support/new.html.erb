<h1>New Support</h1>

<%= form_for @support do |f| %>
  Name: <%= f.text_field :name %><br>
  Email: <%= f.text_field :email %><br>
  Department: 
    <%= f.radio_button(:department, "sales") %>
    <%= label(:department, "Sales" ) %>
    <%= f.radio_button(:department, "marketing") %>
    <%= label(:department, "Marketing") %>
    <%= f.radio_button(:department, "technical") %>
    <%= label(:department, "Technical") %><br>
  Message: <%= f.text_area :message %><br>
  <%= f.submit %>
<% end %>